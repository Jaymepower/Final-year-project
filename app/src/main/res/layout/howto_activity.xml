<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/better_wallpaper"
        >

        <TextView
            android:id="@+id/title_view"
            android:layout_width="243dp"
            android:layout_height="44dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="52dp"
            android:text="How to Play"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_view"
            app:srcCompat="@drawable/bigger_mb_logo" />

        <TextView
            android:id="@+id/host_desc"
            android:layout_width="280dp"
            android:layout_height="138dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="32dp"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="24dp"
            android:text="Hosting"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="22dp"
            android:text="Joining"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <TextView
            android:id="@+id/join_desc"
            android:layout_width="283dp"
            android:layout_height="125dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="16dp"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="144dp"
            android:layout_height="241dp"
            android:layout_marginStart="141dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/join_screenshot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/host_desc"
            tools:srcCompat="@drawable/join_screenshot" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/join_desc"
            tools:srcCompat="@drawable/session_screenshot" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="32dp"
            android:text="Gameplay"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <TextView
            android:id="@+id/game_desc"
            android:layout_width="282dp"
            android:layout_height="123dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="322dp"
            android:layout_height="181dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/gameplay_cap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_desc" />

        <TextView
            android:id="@+id/winning_desc"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView10" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="308dp"
            android:layout_height="180dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/winning_cap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/winning_desc" />

        <TextView
            android:id="@+id/songs_played_desc"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView17" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/songs_played_desc"
            tools:srcCompat="@drawable/played_songs_cap" />

        <TextView
            android:id="@+id/react_desc"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView18" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="270dp"
            android:layout_height="160dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="500dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/react_desc"
            tools:srcCompat="@drawable/react_cap" />

        <TextView
            android:id="@+id/leaderboard_desc"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView19" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="270dp"
            android:layout_height="160dp"
            android:layout_marginStart="98dp"
            android:layout_marginTop="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leaderboard_desc"
            app:srcCompat="@drawable/leaderboard_cap" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>