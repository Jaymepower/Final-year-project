<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/better_wallpaper"
    android:layout_above="@id/llProgressBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <Button
        android:id="@+id/create_game"
        android:layout_width="245dp"
        android:layout_height="65dp"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/ic_dj"
        android:onClick="createGame"
        android:text="Host Game"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/join_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/join_game"
        android:layout_width="245dp"
        android:layout_height="65dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="98dp"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/music_note"
        android:onClick="JoinGame"
        android:text="Join Game"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_game" />

    <Button
        android:id="@+id/profile_button"
        android:layout_width="245dp"
        android:layout_height="65dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="219dp"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/ic_user_icon"
        android:onClick="profile"
        android:text="Profile"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_game" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="382dp"
        android:layout_height="157dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toTopOf="@+id/create_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/musicbingo" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="45dp"
        android:onClick="howTo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_question_mark" />

</androidx.constraintlayout.widget.ConstraintLayout>