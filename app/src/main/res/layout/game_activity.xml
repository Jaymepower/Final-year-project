            android:textSize="11sp" />


    </androidx.gridlayout.widget.GridLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/red"
        android:clickable="true"
        android:onClick="validateLines"
        android:src="@drawable/ic_bingo_"
        app:backgroundTint="@color/white"
        app:borderWidth="2.5dp"
        app:fabCustomSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="70dp"
        app:rippleColor="#8301a2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="197dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:foregroundGravity="center"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/musicbingo" />

    <TextView
        android:id="@+id/now_playing"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album_cover" />

    <ImageView
        android:id="@+id/album_cover"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:srcCompat="@tools:sample/avatars" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/popup_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/fab_border"
        android:backgroundTint="@color/pink"
        android:clickable="true"
        android:onClick="showPopup"
        app:backgroundTint="@color/white"
        app:borderWidth="2.5dp"
        app:fabCustomSize="45dp"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="25dp"
        app:srcCompat="@drawable/ic_podium" />

    <com.andremion.counterfab.CounterFab
        android:id="@+id/reaction_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="95dp"
        android:backgroundTint="@color/pink"
        android:clickable="true"
        android:onClick="reaction"
        app:badgeBackgroundColor="@color/red"
        app:badgePosition="RightBottom"
        app:fabCustomSize="45dp"
        app:layout_constraintBottom_toTopOf="@+id/chat_button"
        app:layout_constraintEnd_toStartOf="@+id/popup_button"
        app:maxImageSize="45dp"
        app:srcCompat="@drawable/ic_smile" />

    <com.andremion.counterfab.CounterFab
        android:id="@+id/chat_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/fab_border"
        android:backgroundTint="@color/pink"
        android:clickable="true"
        android:onClick="chatBox"
        android:src="@drawable/ic_chat"
        app:backgroundTint="@color/white"
        app:badgeBackgroundColor="@color/red"
        app:badgePosition="RightBottom"
        app:borderWidth="2.5dp"
        app:fabCustomSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/floatingActionButton"
        app:maxImageSize="35dp" />


</androidx.constraintlayout.widget.ConstraintLayout>