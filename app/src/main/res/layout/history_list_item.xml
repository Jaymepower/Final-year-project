<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="190dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_edges"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/genre_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@+id/log_genre"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/log_genre"
            android:layout_width="139dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/purple"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="60dp"
            android:layout_height="19dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="Subgenre"
            android:textColor="@color/purple"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/log_genre" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="60dp"
            android:layout_height="19dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Date"
            android:textColor="@color/purple"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="60dp"
            android:layout_height="19dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Lines"
            android:textColor="@color/purple"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView25" />

        <TextView
            android:id="@+id/log_lines"
            android:layout_width="70dp"
            android:layout_height="19dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textView29"
            app:layout_constraintTop_toBottomOf="@+id/log_date" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="70dp"
            android:layout_height="19dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:text="Reactions"
            android:textColor="@color/purple"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/log_date"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="60dp"
            android:layout_height="19dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:text="Score"
            android:textColor="@color/purple"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/log_date"
            app:layout_constraintTop_toBottomOf="@+id/textView27" />

        <TextView
            android:id="@+id/log_score"
            android:layout_width="65dp"
            android:layout_height="19dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textView31"
            app:layout_constraintTop_toBottomOf="@+id/log_reaction" />

        <TextView
            android:id="@+id/log_date"
            android:layout_width="70dp"
            android:layout_height="19dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textView25"
            app:layout_constraintTop_toBottomOf="@+id/log_subgenre" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="29dp"
            android:text="Songs Played"
            android:textColor="@color/purple"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/log_subgenre"
            app:layout_constraintTop_toBottomOf="@+id/log_win" />

        <TextView
            android:id="@+id/log_sp"
            android:layout_width="65dp"
            android:layout_height="19dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="29dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/log_win" />

        <TextView
            android:id="@+id/log_reaction"
            android:layout_width="65dp"
            android:layout_height="19dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textView27"
            app:layout_constraintTop_toBottomOf="@+id/log_sp" />

        <TextView
            android:id="@+id/log_subgenre"
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/log_genre" />

        <ImageView
            android:id="@+id/log_win"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/genre_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>