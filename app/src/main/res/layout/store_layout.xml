<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/better_wallpaper">

    <Button
        android:id="@+id/buy_pop"
        android:layout_width="150dp"
        android:layout_height="59dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/round_button"
        android:onClick="BuyPop"
        android:text="Pop "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pop_icon"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buy_rock"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/round_button"
        android:onClick="buyRockPlaylist"
        android:paddingRight="12dp"
        android:text="Rock"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/rock_icon"
        app:layout_constraintTop_toBottomOf="@+id/buy_pop" />

    <Button
        android:id="@+id/buy_elect"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/round_button"
        android:onClick="BuyElectronic"
        android:paddingRight="8dp"
        android:text="Electronic"
        android:textAlignment="viewStart"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/electronic_icon"
        app:layout_constraintTop_toBottomOf="@+id/buy_rock" />

    <Button
        android:id="@+id/buy_country"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_button"
        android:onClick="BuyCountry"
        android:paddingRight="12dp"
        android:text="Country"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/country_icon"
        app:layout_constraintTop_toBottomOf="@+id/buy_elect" />

    <Button
        android:id="@+id/buy_rap"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_button"
        android:onClick="BuyRap"
        android:text="Rap"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/rap_icon"
        app:layout_constraintTop_toBottomOf="@+id/buy_country" />

    <ImageView
        android:id="@+id/pop_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="47dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/ic_microphone" />

    <ImageView
        android:id="@+id/rock_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="53dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pop_icon"
        app:srcCompat="@drawable/ic_rock" />

    <ImageView
        android:id="@+id/electronic_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rock_icon"
        app:srcCompat="@drawable/ic_keyboard" />

    <ImageView
        android:id="@+id/country_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/electronic_icon"
        app:srcCompat="@drawable/ic_acoustic" />

    <ImageView
        android:id="@+id/rap_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/country_icon"
        app:srcCompat="@drawable/ic_rap" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="37dp"
        android:text="Store"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>