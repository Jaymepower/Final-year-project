<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="480dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:background="@color/grey"
    android:elevation="4dp"
    android:fadingEdgeLength="8dp"
    android:gravity="center"
    android:theme="@style/Theme.AppCompat.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/grey"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/darkWhite"
            app:cardCornerRadius="8dp"
            app:cardElevation="15dp"
            app:cardMaxElevation="8dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="40dp"
                android:text="Songs Played"
                android:textColor="@color/purple"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="75dp"
                android:text="Reactions"
                android:textColor="@color/purple"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/endgame_reacts_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="75dp"
                android:text="reacts"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/endgame_sp_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="40dp"
                android:text="sp"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="75dp"
                android:text="Score"
                android:textColor="@color/purple"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/endgame_score_field"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="90dp"
                android:layout_marginBottom="75dp"
                android:text="Score"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="40dp"
                android:text="Lines"
                android:textColor="@color/purple"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/endgame_lines_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="90dp"
                android:layout_marginBottom="40dp"
                android:text="Lines"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/end_game_oneline"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="60dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/end_game_twoline"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="115dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/end_game_winner"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="170dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="160dp"
                app:srcCompat="@drawable/ic_trophy" />

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="110dp"
                app:srcCompat="@drawable/ic_two_line_icon" />

            <Button
                android:id="@+id/endgame_button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/round_button"
                android:paddingRight="15dp"
                android:text="End"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="End Game"
                android:textColor="@color/purple"
                android:textSize="28dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="55dp"
                app:srcCompat="@drawable/ic_one_line_icon" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>